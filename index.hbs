{{!< default}}

<div class="content-area">
<main class="site-main">
    <div class="tag-feed owl" data-count="{{ @custom.max_tags_per_page }}">

    {{#if @custom.featured_tags }}
        {{> "featured-tag" featured_tag=@custom.featured_tag_slug_1 }}
        {{> "featured-tag" featured_tag=@custom.featured_tag_slug_2 }}
        {{> "featured-tag" featured_tag=@custom.featured_tag_slug_3 }}
        {{> "featured-tag" featured_tag=@custom.featured_tag_slug_4 }}
        {{> "featured-tag" featured_tag=@custom.featured_tag_slug_5 }}
        {{> "featured-tag" featured_tag=@custom.featured_tag_slug_6 }}
    {{else}}
        {{#get "tags" limit="all"}}
        {{#foreach tags}}
            {{> "index-tag" }}
        {{/foreach}}
        {{/get}}
    {{/if}}

    </div>
</main>
</div>
